<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder package-path="com.desafio.ponto">
    <author>Peterson Morais</author>
	<namespace>DesafioPonto</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
    <entity name="PontoDia" local-service="true" table="ponto_dia">
        <column name="Pis" type="long" primary="true"></column>
        <column name="Data" type="long" primary="true"></column>
        <column name="Competencia" type="String"></column>
        <column name="Horas_Trabalhadas" type="int"></column>
        <column name="Horas_Extras" type="int"></column>
        <column name="Horas_Negativas" type="int"></column>
    </entity>
    <entity name="PontoMarcacoes" local-service="true" table="ponto_marcacao">
        <column name="Pis" primary="true" type="long"></column>
        <column name="DataHora" primary="true" type="long"></column>
        <column name="Marcacao_valida" type="boolean"></column>
    </entity>
    <entity name="PontoEletronico" local-service="true"></entity>
</service-builder>